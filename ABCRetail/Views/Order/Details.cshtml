@model ABCRetail.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-receipt me-2"></i>@ViewData["Title"]
                    </h3>
                    <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">
                        @Model.Status
                    </span>
                </div>
                <p class="card-subtitle mb-0 mt-1">Order #@Model.OrderId</p>
            </div>
            <div class="card-body">
                <!-- Success/Error Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Order Summary Section -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-user me-2"></i>Customer Information
                                </h6>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Customer ID:</dt>
                                    <dd class="col-sm-8">@Model.CustomerId</dd>

                                    <dt class="col-sm-4">Username:</dt>
                                    <dd class="col-sm-8">@Model.Username</dd>

                                    @if (ViewBag.Customer != null)
                                    {
                                        <dt class="col-sm-4">Full Name:</dt>
                                        <dd class="col-sm-8">@ViewBag.Customer.Name @ViewBag.Customer.Surname</dd>

                                        <dt class="col-sm-4">Email:</dt>
                                        <dd class="col-sm-8">@ViewBag.Customer.Email</dd>

                                        <dt class="col-sm-4">Shipping Address:</dt>
                                        <dd class="col-sm-8">@ViewBag.Customer.ShippingAddress</dd>
                                    }
                                    else
                                    {
                                        <dt class="col-sm-4">Customer Details:</dt>
                                        <dd class="col-sm-8">
                                            <span class="text-muted">Customer information not available</span>
                                        </dd>
                                    }
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-shopping-bag me-2"></i>Order Information
                                </h6>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Order ID:</dt>
                                    <dd class="col-sm-8">@Model.OrderId</dd>

                                    <dt class="col-sm-4">Order Date:</dt>
                                    <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy-MM-dd hh:mm tt")</dd>

                                    <dt class="col-sm-4">Last Updated:</dt>
                                    <dd class="col-sm-8">
                                        @(Model.Timestamp?.LocalDateTime.ToString("yyyy-MM-dd hh:mm tt") ?? "N/A")
                                    </dd>

                                    <dt class="col-sm-4">Order Status:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge @GetStatusBadgeClass(Model.Status)">
                                            @Model.Status
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Details Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-box me-2"></i>Product Details
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <dl class="row">
                                            <dt class="col-sm-3">Product ID:</dt>
                                            <dd class="col-sm-9">@Model.ProductId</dd>

                                            <dt class="col-sm-3">Product Name:</dt>
                                            <dd class="col-sm-9">@Model.ProductName</dd>

                                            @if (ViewBag.Product != null)
                                            {
                                                <dt class="col-sm-3">Description:</dt>
                                                <dd class="col-sm-9">@ViewBag.Product.Description</dd>

                                                <dt class="col-sm-3">Current Price:</dt>
                                                <dd class="col-sm-9">$@ViewBag.Product.Price.ToString("N2")</dd>

                                                <dt class="col-sm-3">Current Stock:</dt>
                                                <dd class="col-sm-9">
                                                    <span class="badge @(ViewBag.Product.StockAvailable > 10 ? "bg-success" : ViewBag.Product.StockAvailable > 0 ? "bg-warning" : "bg-danger")">
                                                        @ViewBag.Product.StockAvailable units
                                                    </span>
                                                </dd>
                                            }
                                            else
                                            {
                                                <dt class="col-sm-3">Product Details:</dt>
                                                <dd class="col-sm-9">
                                                    <span class="text-muted">Product information not available</span>
                                                </dd>
                                            }
                                        </dl>
                                    </div>
                                    @if (ViewBag.Product != null && !string.IsNullOrEmpty(ViewBag.Product.ImageUrl))
                                    {
                                        <div class="col-md-4 text-center">
                                            <img src="@ViewBag.Product.ImageUrl" class="img-fluid rounded" alt="@Model.ProductName" style="max-height: 150px;">
                                            <p class="text-muted mt-2 small">Product Image</p>
                                        </div>
                                    }
                                    else if (ViewBag.Product != null)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="bg-light d-flex align-items-center justify-content-center"
                                                 style="height: 150px; border-radius: 8px;">
                                                <i class="fas fa-image fa-3x text-muted"></i>
                                            </div>
                                            <p class="text-muted mt-2 small">No image available</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pricing Breakdown Section -->
                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-money-bill-wave me-2"></i>Pricing Breakdown
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead class="table-secondary">
                                            <tr>
                                                <th>Description</th>
                                                <th class="text-end">Quantity</th>
                                                <th class="text-end">Unit Price</th>
                                                <th class="text-end">Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Model.ProductName</td>
                                                <td class="text-end">@Model.Quantity</td>
                                                <td class="text-end">$@Model.UnitPrice.ToString("N2")</td>
                                                <td class="text-end">$@Model.TotalPrice.ToString("N2")</td>
                                            </tr>
                                            <tr>
                                                <td colspan="3" class="text-end fw-bold">Subtotal:</td>
                                                <td class="text-end">$@Model.TotalPrice.ToString("N2")</td>
                                            </tr>
                                            <tr>
                                                <td colspan="3" class="text-end fw-bold">Tax (0%):</td>
                                                <td class="text-end">$0.00</td>
                                            </tr>
                                            <tr class="table-success">
                                                <td colspan="3" class="text-end fw-bold fs-5">Total Amount:</td>
                                                <td class="text-end fw-bold fs-5">$@Model.TotalPrice.ToString("N2")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex gap-2 justify-content-center flex-wrap">
                            <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Edit Order
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-list me-2"></i>Back to Orders
                            </a>
                            <button type="button" class="btn btn-outline-info" onclick="window.print()">
                                <i class="fas fa-print me-2"></i>Print Receipt
                            </button>
                            <a asp-controller="Upload" asp-action="Index" class="btn btn-success">
                                <i class="fas fa-upload me-2"></i>Upload Payment
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Show success/error messages
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                toastr.success(successMessage);
            }

            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                toastr.error(errorMessage);
            }
        });
    </script>
}

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-secondary",
            "Processing" => "bg-warning",
            "Completed" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}