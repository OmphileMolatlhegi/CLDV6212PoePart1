@model ABCRetail.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title">@ViewData["Title"]</h3>
                <p class="card-subtitle">Order #@Model.OrderId</p>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i> Warning!
                    </h4>
                    <p>You are about to delete this order permanently. This action cannot be undone.</p>
                    <hr>
                    <p class="mb-0">Deleting orders may affect your sales reports and inventory records.</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">Order Information</h6>
                            </div>
                            <div class="card-body">
                                <dl>
                                    <dt>Order ID:</dt>
                                    <dd>@Model.OrderId</dd>

                                    <dt>Customer:</dt>
                                    <dd>@Model.Username</dd>

                                    <dt>Product:</dt>
                                    <dd>@Model.ProductName</dd>

                                    <dt>Order Date:</dt>
                                    <dd>@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

                                    <dt>Status:</dt>
                                    <dd>
                                        <span class="status-badge status-@Model.Status.ToLower()">
                                            @Model.Status
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">Financial Details</h6>
                            </div>
                            <div class="card-body">
                                <dl>
                                    <dt>Quantity:</dt>
                                    <dd>@Model.Quantity</dd>

                                    <dt>Unit Price:</dt>
                                    <dd>$@Model.UnitPrice.ToString("N2")</dd>

                                    <dt>Total Price:</dt>
                                    <dd class="h5 text-success">$@Model.TotalPrice.ToString("N2")</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.OrderId" />

                    <div class="form-group">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label" for="confirmDelete">
                                I understand that this action cannot be undone and I want to proceed with deletion.
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable delete button only when checkbox is checked
            $('#confirmDelete').change(function() {
                $('#deleteButton').prop('disabled', !$(this).is(':checked'));
            });
        });
    </script>
}